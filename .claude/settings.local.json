{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Edit(src/*)",
      "Edit(changelog.md)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr view:*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force:*)",
      "Delete(*)"
    ]
  }
}
